    <input type="text" name="from" placeholder="Your Name" required />
    <textarea name="msg" placeholder="Type your message..." required></textarea>
    <input type="text" name="to" placeholder="Recipient Name" required />
    <button>Send Message ðŸš€</button>
    <div class="back-link">
      <a href="/chats">â¬… Back to Chats</a>
    </div>
  </form>
</body>
</html>
